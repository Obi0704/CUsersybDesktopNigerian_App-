rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public marketplace - anyone can read, authenticated users can write
    match /artifacts/{appId}/public/data/marketplace/{listingId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // User data - only owner can access
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 1, 5);
    }
    
  }
}